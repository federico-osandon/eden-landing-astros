---
import MenuHamb from './menu-hamb.svg'
---
<nav>
    <div class="brand-content">
          <a class="brand" href="/" aria-current="page">EDEN</a>
    </div>
    <div class="menu-hamb-content">
          <img class="menu-hamb" src="/menu-hamb.svg" alt="menu" />
		  <!-- <MenuHamb class="menu-hamb" /> -->
    </div>
</nav>

<style>
    nav {
		position: fixed;
		width: 100%;

		display: flex;
		flex-direction: row;
		flex-wrap: initial;

		align-items: center;
		justify-content: space-between;
		padding: 0.5rem;
		gap: 0.5rem;
		/* border-bottom: solid 1px #aaa; */
		/* background-color: #eee; */
		z-index: 10;
	}

	.brand {
		display: inline-block;
		min-width: 9rem;
		padding: 0.5rem;
		font-size: 2rem;
		font-weight: bolder;
		/* border-radius: 0.2rem;
		border: solid 1px #aaa; */
		text-align: center;
		text-decoration: none;
		color: #333;|
	}

	.brand[aria-current='page'] {
		color: #f7f7f7;
		
		/* background-color: #d4d4d4; */
	}

	.menu-hamb-content {
		cursor: pointer;
	}
	.menu-hamb {
		fill: #f7f7f7;
	}
</style>
	