<section class="sectionSpotify">
	<header class="content-title">
		<h6 class="spotify-tile">
			<strong>
				Spotify
			</strong>
		</h6>
	</header>
	<div class="div"></div>
</section>

<style>
	.sectionSpotify {
		width: 100%;
		height: 100vh;

		padding: 100px 25px 20px 25px;

		background-color: #f7f7f7f7;

		position: relative;
		/* display: flex;
			flex-wrap: wrap;
			flex-direction: row; */

		/* justify-content: center;
			align-items: center; */
	}

	.content-title {
		width: 100%;
		height: 50px;
		/* padding-bottom: 20px; */

		/* display: flex;
			justify-content: center;
			align-items: center; */
	}

	.spotify-tile {
		width: 100%;
		height: 100%;
		text-align: left;

		

		color: #333;
		font-size: 1.3rem;
		text-transform: uppercase;
		line-height: 1px;
	}

	.spotify-tile::after {
		content: "";
		width: 240px;
		height: 3px;
		margin: 9px 3px;
		display: inline-block;
		background-color: #78866b;
	}

	.div {
		width: 100%;
		height: 90%;
		border: 4px solid #78866b;
		border-radius: 10px;
	}
</style>
<script>
	import { gsap } from 'gsap'
	import { ScrollTrigger } from 'gsap/ScrollTrigger'

	gsap.registerPlugin(ScrollTrigger)

	let spotify = gsap.timeline({
			scrollTrigger: {
				trigger: '.sectionSpotify',
				// markers: true,
				scrub: 8,
				pin: true,
				end: 'bottom top',
				pinSpacing: false,
			},
		})


</script>