---
import SectionTitle from "../Section-Title/Section-Title.astro"
import SpotifyCard from "./SpotifyCard.astro"
---

<section class="sectionSpotify">
	<SectionTitle>
		Spotify
	</SectionTitle>
	<div class="div">
		<SpotifyCard>
			<iframe style="border-radius:12px" src="https://open.spotify.com/embed/track/0kmP5g7PidiDHhz6odoB3Y?utm_source=generator" width="100%" height="100%" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
		</SpotifyCard>
		<SpotifyCard>
			<iframe style="border-radius:12px" src="https://open.spotify.com/embed/track/55FSTjY46bTfYfClmd2sq7?utm_source=generator" width="100%" height="100%" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
		</SpotifyCard>
		<SpotifyCard>
			<iframe style="border-radius:12px" src="https://open.spotify.com/embed/track/5j6u0vBPECt8pDSAIFemSR?utm_source=generator" width="100%" height="100%" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
		</SpotifyCard>
	</div>
</section>

<style>
	.sectionSpotify {
		width: 100%;
		min-height: 100vh;

		padding: 100px 25px 20px 25px;

		background-color: #f7f7f7f7;

		position: relative;
		display: flex;
		flex-wrap: wrap;
	

		
	}

	

	.div {
		width: 100%;
		height: 90%;

		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
	}
</style>
