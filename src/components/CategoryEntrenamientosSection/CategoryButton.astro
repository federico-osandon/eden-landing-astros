---
const { href = '#' } = Astro.props
---
<div class="content-button">
    <a href={href}>
        <slot />
    </a>

</div>

<style>
    .content-button {
        /* width: 20%; */
        display: flex;
        justify-content: center;
        align-items: center;
    }
    a {
        /* width: 100%; */
        color: #333;
        text-decoration: none;

        border: 3px solid #78866b;
        border-radius: 5px;

        padding: 10px 15px;
        margin: 5px;
    }

    a:hover {
        color: #000;
        text-decoration: none;

       
        background-color: lightgray;
    }
</style>