---
import SectionTitle from "../Section-Title/Section-Title.astro"
---

<section class="sectionEventos">
	<SectionTitle>
		Eventos
	</SectionTitle>
	<div class="div"></div>
</section>

<style>
	.sectionEventos {
		width: 100%;
		height: 100vh;

		padding: 100px 25px 20px 25px;

		background-color: #f7f7f7;

		position: relative;
		
	}

	.div {
		width: 100%;
		height: 90%;
		
	}
</style>

<script>
	import { gsap } from 'gsap'
	import { ScrollTrigger } from 'gsap/ScrollTrigger'

	gsap.registerPlugin(ScrollTrigger)

	let eventos = gsap.timeline({
			scrollTrigger: {
				trigger: '.sectionEventos',
				// markers: true,
				scrub: 8,
				pin: true,
				end: 'bottom top',
				pinSpacing: false,
			},
		})


</script>
